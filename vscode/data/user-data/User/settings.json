{
    "editor.fontLigatures": false,
    "editor.renderWhitespace": "boundary",
    "editor.tabSize": 2,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmPasteNative": false,
    "explorer.decorations.colors": false,
    "extensions.ignoreRecommendations": true,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.simpleDialog.enable": true,
    "files.trimTrailingWhitespace": true,
    "git.ignoreMissingGitWarning": true,
    "git.openRepositoryInParentFolders": "never",
    "js/ts.implicitProjectConfig.checkJs": true,
    "keyboard.dispatch": "keyCode",
    "markdown.preview.scrollEditorWithPreview": false,
    "markdown.preview.scrollPreviewWithEditor": false,
    "search.useIgnoreFiles": false,
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "telemetry.telemetryLevel": "off",
    "update.mode": "none",
    "update.showReleaseNotes": false,
    "window.zoomLevel": -1,
    "workbench.editor.decorations.colors": false,
    "workbench.editor.enablePreview": false,
    "workbench.editor.pinnedTabsOnSeparateRow": true,
    "workbench.list.openMode": "doubleClick",
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "none",

    "files.exclude": {
        "**/__pycache__": true,
        "**/*.bat": false,
    },

    "[markdown]": {
        "files.trimTrailingWhitespace": false,
        "editor.wordWrap": "off"
    },

    "code-eol.newlineCharacter": "↓",
    "code-eol.returnCharacter": "←",
    "code-eol.crlfCharacter": "←↓",

    /* Theme below - keep at bottom */
    "workbench.colorTheme": "Default Dark Modern",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#000030",
        "activityBar.activeBorder": "#0033AA",
        "activityBar.background": "#000000",
        "activityBarBadge.background": "#0033AA",
        "breadcrumb.background": "#000000",
        "debugToolBar.background": "#000000",
        "editor.background": "#000000",
        "editor.findMatchBackground": "#990099",
        "editor.findMatchHighlightBackground": "#99009988",
        "editor.inactiveSelectionBackground": "#9000F055",
        "editor.selectionBackground": "#9000F088",
        "editor.wordHighlightBackground": "#0033AA88",
        "editorGroup.dropBackground": "#00007055",
        "editorGroupHeader.tabsBackground": "#000000",
        "editorGutter.background": "#000000",
        "editorHoverWidget.background": "#000000",
        "editorMarkerNavigation.background": "#000000",
        "editorSuggestWidget.background": "#000000",
        "editorWidget.background": "#000000",
        "input.background": "#000000",
        "input.border": "#0033AA",
        "inputOption.activeBackground": "#0033AA",
        "inputOption.activeBorder": "#00000000",
        "list.activeSelectionBackground": "#000060",
        "list.dropBackground": "#000040",
        "list.focusOutline": "#0033AA",
        "list.hoverBackground": "#000070",
        "list.inactiveSelectionBackground": "#000040",
        "menu.background": "#000000",
        "menu.selectionBackground": "#000070",
        "menubar.selectionBackground": "#000070",
        "minimap.findMatchHighlight": "#99009988",
        "notifications.background": "#000000",
        "panel.background": "#000000",
        "peekViewResult.background": "#000000",
        "peekViewTitle.background": "#000000",
        "quickInput.background": "#000000",
        "scrollbarSlider.activeBackground": "#0033AA",
        "scrollbarSlider.background": "#000040",
        "scrollbarSlider.hoverBackground": "#000070",
        "sideBar.background": "#000000",
        "sideBarSectionHeader.background": "#000000",
        "statusBar.background": "#000000",
        "tab.activeBackground": "#000030",
        "tab.activeBorderTop": "#0033AA",
        "tab.dragAndDropBorder": "#0055AA",
        "tab.hoverBackground": "#000070",
        "tab.inactiveBackground": "#000020",
        "titleBar.activeBackground": "#000000",
    },
}
